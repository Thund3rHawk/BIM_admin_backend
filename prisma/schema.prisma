generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  password String
  courses Courses[]
}

model Users {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName     String    @unique
  lastName    String
  email     String
  phoneNo   String
}

model Courses {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  price String
  offerPrice String
  description String
  content String
  imageUrl String
  author   Admin      @relation(fields: [authorId], references: [id])
  authorId String    @db.ObjectId
}

model manageRoles {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  firstName   String
  lastName  String
  email   String
  password  String
  addCourse   Boolean
  editCourse  Boolean
  deleteCourse  Boolean
}